<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.chitiet_sanpham">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        android:background="#66170b"
        app:titleTextColor="#fffdfc"
        app:title="CHI TIẾT SẢN PHẨM"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgchitietsanpham"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="250dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Tên Sản Phẩm"
            android:id="@+id/textviewTenchitietsanpham"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewgiachitietsanpham"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:text="Giá"
            android:textColor="#f20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:padding="15dp"
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:id="@+id/spinerSize"
                android:layout_width="90dp"
                android:layout_height="50dp"></Spinner>
        </LinearLayout>
        <Button
            android:id="@+id/buttondatmua"
            android:textColor="#99746e"
            android:textSize="15dp"
            android:text="Thêm Giỏ Hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:text="Mô tả chi tiết sản phẩm "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>